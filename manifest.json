{
    "manifest_version": 2,
    "name": "Word Changer",
    "description": "Make hilarious content by swapping the text on your favorite websites.",
    "version": "1.0",
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Word Changer"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "main.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}